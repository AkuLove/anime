    "react-dom": "^18",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5",
    "husky": "^8.0.0"
  }
